.container {
  border-radius: 5px;
  background-color: #f2f2f2;
  padding: 20px;
  height: 100%;
}

.loader{
    display: none;
    position: fixed;
    z-index: 10000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: white;
    text-align: center;
}

.loader_img{
    transform: translateY(50%);
    width: 20%;
    height: 40%;
}   
</style>
</head>
<body>
    <input type="checkbox" id="check"/>
    <!--Header area start-->
     <header>
         <label for="check">
             <i class="fa-solid fa-bars" id="sidebar_btn"></i>
         </label>
         <div class="left_area">
             <h3>Turbo <span>JS</span></h3>
         </div>
         <div class="right_area">
             <a href="#" class="logout_btn" onclick="LogOut()">Logout</a>
         </div>
     </header>
    <!--Header area end-->
    <!--Sidebar start-->
    <div class="sidebar">
        <center>
            <img src="~/images/Admin/Dashboard/user.jpg" class="profile_image" alt="User Img" />
            <h4>Janu Fourie</h4>
        </center>
        <a href="#" onclick="Dashboard()"><i class="fa-solid fa-desktop"></i> <span>Dashboard</span></a>
        <a href="#" onclick="Reporting()"><i class="fa-solid fa-file-pdf"></i> <span>Reporting</span></a>
        <a href="#" onclick="Analytics()"><i class="fa-solid fa-chart-pie"></i> <span>Analytics</span></a>
        <a href="#" onclick="Courses()"><i class="fa-solid fa-book"></i> <span>Courses</span></a>
        <a href="#" onclick="Modules()"><i class="fa-solid fa-book-open"></i> <span>Modules</span></a>
        <a href="#" onclick="User()"><i class="fa-solid fa-user"></i> <span>Users</span></a>
        <a href="#" onclick="Communication()"><i class="fa-solid fa-comment"></i> <span>Communication</span></a>
    </div>
    <!--Sidebar end-->
    <div class="content">
        <div class="loader" id="load_container">
            <img class="loader_img" src="~/images/Admin//mailGif.gif" alt="loader" />
        </div>
        <div class="container">
                <label for="receiver">Receiver</label>
                <select id="receiver" name="country" onchange="ReceiverChanged(this)" required>
                    <option value="">-- Select --</option>
                </select>

                <label for="lname">Subject</label>
                <input type="text" oninput="SubjectChange(this)" id="lname" name="lastname" placeholder="Purpose of this email" required>

                <label for="message">Message</label>
                <textarea oninput="MessageChanged(this)" id="message" name="subject" placeholder="Write email content..." style="height:200px" required></textarea>

                <input id="submitEmail" onclick="SendEmail()" type="submit" value="Submit">
                
    </div>
    </div>
</body>
</html>

<script>
var receiver = "";
var subject = "";
var message = "";

$( document ).ready(function() {
        
        $.ajax({
            "url": "@Url.Action("GetAllUsers", "AdminUsers")",
            "async": true,
            "type": "GET",
            "dataType": "Json",
            "success": function (response) {
                PopulateTotals(response);
              },
        "error": function(response) {
            alert("Error fetching user data");
            console.log(response)
        }
             });
    });

    function PopulateTotals(users){
        var html = '';
        var selectElem = document.getElementById("receiver");
    for (var user of users ) {
        var element = document.createElement("option");
        element.value = user.email;
        element.innerText = user.username;
        selectElem.append(element);
    }
    }

function ReceiverChanged(selectObject) {
    receiver = selectObject.value;
}

function SubjectChange(textObject) {
    subject = textObject.value;
}

function MessageChanged(textObject) {
    message = textObject.value;
}

function SendEmail(){
    if (receiver === "" || subject === "" || message === "") {
        toastr.error("Please fill in all fields");
    }else{
        $('#load_container').css({"display":"block"});
        $.ajax({
            "url": "/AdminCommunication/SendEmail",
            "async": true,
            "data": {
                user: receiver,
                subj: subject,
                body: message
                },
            "type": "POST",
            "dataType": "Json",
            "success": function (response) {
                toastr.success("Email sent");
                        },
            "error": function (response) {
                if (response.status === 200) {
                    $('#load_container').css({"display":"none"});
                     toastr.success("Email sent");
                } else {
                    toastr.success("Error sending email");
                }
              }
             });
    }
        
}

function LogOut() {
    window.location = '@Url.Action("Index", "Home")';
}
function Dashboard() {
    window.location = '@Url.Action("AdminDashboard", "AdminDashboard")';
}
function Reporting() {
    window.location = '@Url.Action("Index", "AdminReporting")';
}
function Analytics() {
    window.location = '@Url.Action("Index", "AdminAnalytics")';
}
function Courses() {
    window.location = '@Url.Action("Index", "AdminCourses")';
}
function Modules() {
    window.location = '@Url.Action("Index", "AdminModules")';
}
function User() {
    window.location = '@Url.Action("Index", "AdminUsers")';
}
function Communication() {
    window.location = '@Url.Action("Index", "AdminCommunication")';
}
</script>

