        $.ajax({
            "url": "/Login/LoginUser",
            "async": true,
            "data": {
                username: "Janu Fourie",
				password: "JanuFourie"
            },
            "type": "POST",
            "dataType": "Json",
            "success": function (response) {
                console.log(response);
                        },
            "error": function (response) {
                console.log("Error");
              }
             });
    }
</script>